# Docker Compose override for development
# Copy this to docker-compose.override.yml for development-specific settings

services:
  # Development overrides for the app
  app:
    environment:
      - NODE_ENV=development
    volumes:
      # Mount source code for hot reloading (if using dev mode)
      - ./src:/app/src:ro
      - ./static:/app/static:ro
    # Expose port for direct access during development
    ports:
      - "3000:3000"

  # Development nginx configuration
  nginx:
    volumes:
      # Mount nginx config for live editing
      - ./nginx/nginx.conf:/etc/nginx/nginx.conf:ro
      - ./nginx/conf.d:/etc/nginx/conf.d:ro
    environment:
      - DOMAIN_NAME=localhost

  # Expose database port for development tools
  db:
    ports:
      - "3306:3306"

  # Expose adminer for database management
  adminer:
    ports:
      - "8080:8080"
